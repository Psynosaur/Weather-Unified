<!DOCTYPE html>
<html lang="en">
<head>
    @*   *@
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-153195535-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-153195535-1');
    </script>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Durbanville Weather - @ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/favicon.ico"/>
    <link rel="icon" href="data:,">

    <meta name="description" content="@ViewData["Description"]"/>
    <meta name="title" content="Durbanville Weather - @ViewData["Title"]"/>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/assets/bulma.min.css">
        <link rel="stylesheet" href="~/lib/assets/bulma-tooltip.min.css">
        <link rel="stylesheet" href="~/lib/assets/flatpickr.css">
        <link rel="stylesheet" href="~/css/site.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
</head>
<body>

<nav class="navbar is-dark" role="navigation" aria-label="main navigation">

    <div class="navbar-brand has-text-light">
        <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Index">
            Weather Unified
        </a>

        <a role="button" class="navbar-burger has-text-light" aria-label="menu" aria-expanded="false" data-target="pew">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>
    <div id="pew" class="navbar-menu has-background-dark">
        <ul class="navbar-start">
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Hour">Hourly</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Day">Daily</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Week">Weekly</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Month">Monthly</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Forecast">Forecast</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Date">Historical</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="About">About</a>
            <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Experimental">Experimental</a>
            @* <a class="navbar-item has-text-light" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> *@
        </ul>
    </div>

</nav>
@* <partial name="_CookieConsentPartial"/> *@
<environment include="Development">
    <script src="~/lib/assets/core.js"></script>
    <script src="~/lib/assets/charts.js"></script>
    <script src="~/lib/assets/dark.js"></script>
    @* <script src="~/dist/index.js"></script> *@
    <script src="~/lib/assets/flatpickr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</environment>
<section class="hero is-fullheight-with-navbar">
    <div class="hero-body is-paddingless">
        <div class="container is-fluid is-0-mobile">
            @RenderBody()

            <footer>
                <div class="content has-text-light has-background-dark has-text-centered">
                    <p>
                        @DateTime.Now.Year - Weather Unified<br/>
                        <span class="copyright">Powered by @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</span>
                    </p>
                </div>
            </footer>
        </div>
    </div>
</section>

@RenderSection("Scripts", required: false)
</body>
</html>