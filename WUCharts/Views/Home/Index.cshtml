<h2>Latest Stats</h2>
<strong>Date Time :</strong> @Model.ObsTime.ToLocalTime().ToString("ddd  dd MMM yyyy - HH:mm:ss zzz")
<div class="container col-lg-12 col-sm-12">
    <div class="row">
        <div class="col-lg-4 col-sm-4">


            <table>
                <tr>
                    <th>
                        <strong>Outdoor</strong>
                    </th>
                </tr>
                <tr>
                    <td>Current Temp</td>
                    <td>@Model.TempOutCur&#176</td>
                </tr>
                <tr>
                    <td>Temp Min</td>
                    <td>@Model.Tmin&#176</td>
                </tr>
                <tr>
                    <td>Temp Max</td>
                    <td>@Model.Tmax&#176</td>
                </tr>
                <tr>
                    <td>Humidity</td>
                    <td>@Model.HumOutCur%</td>
                </tr>
                <tr>
                    <td>Dew Point</td>
                    <td>@Model.DewCur&#176</td>
                </tr>

            </table>
        </div>
        <div class="col-lg-4 col-sm-4">


            <table>
                <tr>
                    <th>
                        <strong>Wind Direction</strong>
                    </th>
                </tr>
                <tr>
                    <td>Wind Direction</td>
                    <td>@Model.WindDirCur&#176</td>
                </tr>
                <tr>
                    <td>Wind Direction</td>
                    <td>@Model.WindDirCurEng</td>
                </tr>
                <tr>
                    <td>Wind Dir Avg</td>
                    <td>@Model.WindDirAvg10Eng</td>
                </tr>
                <tr>
                    <td>Wind Chill</td>
                    <td>@Model.WindChillCur&#176</td>
                </tr>
                <tr>
                    <td>Wind Dir Avg</td>
                    <td>@Model.WindDirAvg10&#176</td>
                </tr>

            </table>
        </div>
        <div class="col-lg-4 col-sm-4">


            <table>
                <tr>
                    <th>
                        <strong>Rain</strong>
                    </th>
                </tr>
                <tr>
                    <td>Rain Rate</td>
                    <td>@Model.RainRateCur mm/h</td>
                </tr>
                <tr>
                    <td>RainTotal Day</td>
                    <td>@Model.RainDay mm</td>
                </tr>
                <tr>
                    <td>RainTotal Yesterday</td>
                    <td>@Model.RainYest mm</td>
                </tr>
                <tr>
                    <td>RainTotal Month</td>
                    <td>@Model.RainMonth mm</td>
                </tr>
                <tr>
                    <td>RainTotal Year</td>
                    <td>@Model.RainYear mm</td>
                </tr>
            </table>
        </div>
        <div class="col-lg-4 col-sm-4">

            <table>
                <tr>
                    <th>
                        <strong>Indoor</strong>
                    </th>
                </tr>
                <tr>
                    <td>Current Temp</td>
                    <td>@Model.TempInCur&#176</td>
                </tr>
                <tr>
                    <td>Humidity</td>
                    <td>@Model.HumInCur%</td>
                </tr>
                <tr>
                    <td>Pressure</td>
                    <td>@Model.PressCur hPa</td>
                </tr>
            </table>
        </div>
        <div class="col-lg-4 col-sm-4">


            <table>
                <tr>
                    <th>
                        <strong>Wind Speed</strong>
                    </th>
                </tr>
                <tr>
                    <td>Wind Current</td>
                    <td>@Model.WindSpeedCur m/s</td>
                </tr>
                <tr>
                    <td>Wind Average</td>
                    <td>@Model.WindAvgSpeedCur m/s</td>
                </tr>
                <tr>
                    <td>Wind Gust</td>
                    <td>@Model.WindGust10 m/s</td>
                </tr>
            </table>
        </div>


        <div class="container-fluid col-md-3">
            <br/>
            <strong>Solar</strong>
            <br/>
            Solar Radiation : @Html.DisplayFor(model => model.SolarRad)W/m²
            <br/>
            UV index : @Html.DisplayFor(model => model.UV)
        </div>

        <br/>
    </div>
</div>